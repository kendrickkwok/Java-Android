<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false"
    android:background="@drawable/quiz">

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:text=""
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 1: 3+6 omg asfasfasgsgasgasgasgas jaljf they story of never told?g?"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="I don&apos;t know"
            android:id="@+id/button2"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:background="#a8dff4"
            android:layout_alignParentEnd="true" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="Nine"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button4"
            android:background="#f83a3a"
            android:layout_alignStart="@+id/button4" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="Hello it me"
            android:id="@+id/button5"
            android:layout_above="@+id/button4"
            android:layout_alignRight="@+id/button4"
            android:background="#ffc641"
            android:layout_alignEnd="@+id/button4" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="3?"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#d3e992"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="New RadioButton"
            android:id="@+id/radioButton"
            android:background="#A1887F"
            android:layout_gravity="right" />

    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="New RadioButton"
        android:id="@+id/radioButton19"
        android:background="#FF9E80"
        android:layout_gravity="right" />

    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Next Question"
        android:id="@+id/button12"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
    </ScrollView>
